/* To learn more about this file see: https://angular.io/config/tsconfig. */
//Angular cli uses webpack bundler to transpile ts to ES5 js
//You can install typescript globally on your local machine by: npm install -g typescript
//check version with tsc -v (tsc = typescript compiler), this is used to transpile ts to js
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"]
  }
}
